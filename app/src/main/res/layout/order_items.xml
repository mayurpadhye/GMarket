<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red Label"
            android:textColor="@color/black"
            android:padding="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            />
        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dp"
            android:text="@string/qty"
            />
        <TextView
            android:id="@+id/tv_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Name : Red Label"
android:visibility="gone"
            android:padding="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAR 19.18"
            android:visibility="gone"
            android:textColor="@color/black"
            android:padding="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_discounted_pice"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/tv_original_price"
                android:text="FCFA 321"
                android:layout_marginRight="@dimen/ten_dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/tv_discount"
                android:text="200" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:text="75% OFF" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_product_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Name : Red Label"
android:visibility="gone"
            android:padding="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="@dimen/hundred_dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/ten_dp"
            android:src="@drawable/seller_4"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/five_dp"
                    android:text="@string/qty"
                    />
                <Spinner
                    android:id="@+id/sp_qty"
                    android:layout_toRightOf="@+id/tv_qty"
                    android:layout_width="@dimen/thirty_dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    ></Spinner>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>