<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/cat_tool"
        layout="@layout/custom_cat_toolbar"/>
    <ScrollView
        android:layout_below="@+id/cat_tool"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/twenty_dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue">
                <TextView
                    android:text="@string/contact_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:padding="5dp"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="@dimen/twenty_dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:layout_weight="0.1"
                    android:layout_marginTop="@dimen/four_dp"
                    />
                <ImageView
                    android:id="@+id/iv_edit_contact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_dp"
                    android:src="@drawable/edit"
                    android:layout_weight="0.9"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:padding="5dp"
                android:textColor="@color/gray_dark"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/ten_dp"
                />
            <TextView
                android:id="@+id/tv_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/four_dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:background="@color/light_gray"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_id"
                android:padding="5dp"
                android:textColor="@color/gray_dark"
                android:layout_weight="0.1"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/four_dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:background="@color/light_gray"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number"
                android:padding="5dp"
                android:textColor="@color/gray_dark"
                android:layout_weight="0.1"
                android:layout_marginTop="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:layout_weight="0.1"
                    android:layout_marginTop="@dimen/four_dp"
                    />
                <ImageView
                    android:id="@+id/iv_edit_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_dp"
                    android:visibility="invisible"
                    android:src="@drawable/edit"
                    android:layout_weight="0.9"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/blue"
                android:layout_marginTop="@dimen/twenty_dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:textColor="@color/white"
                    android:layout_weight="0.1"
                    android:padding="8dp"
                    android:layout_marginTop="@dimen/four_dp"
                    />
                <ImageView
                    android:id="@+id/iv_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_dp"
                    android:src="@drawable/edit_white"
                    android:layout_weight="0.9"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/blue"
                android:layout_marginTop="@dimen/twenty_dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address_book"
                    android:textColor="@color/white"
                    android:layout_weight="0.1"
                    android:padding="8dp"
                    android:layout_marginTop="@dimen/four_dp"
                    />
                <ImageView
                    android:id="@+id/iv_edit_address_book"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_dp"
                    android:src="@drawable/edit_white"
                    android:layout_weight="0.9"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_shipping_address"
                android:padding="5dp"
                android:textColor="@color/gray_dark"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/ten_dp"
                />
            <TextView
                android:id="@+id/tv_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:padding="5dp"
                android:lineSpacingExtra="@dimen/five_dp"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/four_dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:background="@color/light_gray"></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_billing_address"
                android:padding="5dp"
                android:textColor="@color/gray_dark"
                android:layout_weight="0.1"
                android:lineSpacingExtra="@dimen/five_dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/tv_billing_address"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text=""
                android:lineSpacingExtra="@dimen/five_dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/four_dp"
                />


            <TextView
                android:id="@+id/tv_change_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Language"
                android:visibility="gone"
                android:lineSpacingExtra="@dimen/five_dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/four_dp"
                />
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/p_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>