<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <TextView
          android:id="@+id/tv_order_id"
          android:text="Order ID: 123457234234234"
          android:padding="@dimen/ten_dp"
          android:textColor="@color/blue"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"

          />

      <TextView
          android:id="@+id/tv_order_date"
          android:text="Date: 26/11/1994"
        android:gravity="right"
          android:padding="@dimen/ten_dp"
          android:textColor="@color/blue"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.5"
          />
  </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ship_to"
        android:padding="@dimen/ten_dp"
        android:layout_weight="0.5"
        android:textColor="@color/black"

        />

           <TextView
               android:id="@+id/tv_ship_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mayur "
android:gravity="right"
                    android:layout_weight="0.5"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/blue"
            />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


            <TextView
                android:id="@+id/tv_status"
                android:text="Order Status : Pending"
                android:padding="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:textColor="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"

                />
                <TextView
                    android:id="@+id/tv_order_price"
                    android:text="Order Total : Pending"
                    android:padding="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textColor="@color/blue"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"

                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_view_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_order_details"
                android:textSize="@dimen/fourteen_dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@drawable/cell_shape"
                android:padding="@dimen/fifteen_dp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>